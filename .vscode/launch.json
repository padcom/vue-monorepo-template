  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "hello (dev)",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/packages/hello",
      "preLaunchTask": "npm run dev",
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "hello (attach)",
      "port": 9222,
      "webRoot": "${workspaceFolder}/packages/hello",
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "world (dev)",
      "url": "http://localhost:5174",
      "webRoot": "${workspaceFolder}/packages/world",
      "preLaunchTask": "npm run dev",
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "world (attach)",
      "port": 9222,
      "webRoot": "${workspaceFolder}/packages/world",
    }
  ]
}
